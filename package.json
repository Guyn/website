{
	"name": "guyn-page",
	"version": "1.0.0",
	"description": "Colors",
	"author": "Sil van Diepen",
	"title": "Guyn",
	"private": true,
	"scripts": {
		"dev": "sh scripts/dev.sh",
		"devlocal": "sh scripts/devlocal.sh",
		"staging": "sh scripts/staging.sh",
		"production": "sh scripts/production.sh",
		"lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
		"lintfix": "eslint --ext .js,.vue --ignore-path .gitignore . --fix",
		"precommit": "lint",
		"generate": "nuxt generate",
		"generate:production": "cp ./config/production.js ./config/latest.js && nuxt generate",
		"stylelint": "stylelint '**/*.vue' '**/*.scss'",
		"stylelint:fix": "stylelint '**/*.vue' '**/*.scss' --fix"
	},
	"dependencies": {
		"@nuxtjs/axios": "^5.6.0",
		"@nuxtjs/google-analytics": "^2.2.0",
		"@sil/scroll-parallax": "^1.0.3",
		"@sil/scroll-trigger": "^1.1.2",
		"guyn": "0.0.12",
		"henris": "^1.2.13",
		"nuxt": "^2.10.0",
		"vue-clipboard2": "^0.3.1"
	},
	"devDependencies": {
		"@henris/custom": "^0.0.2",
		"babel-eslint": "^10.0.3",
		"eslint": "^6.5.1",
		"eslint-config-prettier": "^6.4.0",
		"eslint-friendly-formatter": "^4.0.1",
		"eslint-loader": "^3.0.2",
		"eslint-plugin-prettier": "^3.1.1",
		"eslint-plugin-vue": "^5.2.3",
		"node-sass": "^4.12.0",
		"nuxt-rfg-icon": "^0.6.4",
		"raw-loader": "^3.1.0",
		"sass-loader": "^8.0.0",
		"stylelint": "^11.0.0",
		"stylelint-logical-order": "^0.0.6",
		"stylelint-order": "^3.1.1"
	},
	"browserslist": [
		"last 2 versions",
		"not dead"
	],
	"stylelint": {
		"rules": {
			"at-rule-no-unknown": [
				true,
				{
					"ignoreAtRules": [
						"if",
						"for",
						"else",
						"each",
						"mixin",
						"include",
						"content"
					]
				}
			],
			"order/order": [
				"custom-properties",
				"dollar-variables",
				"declarations",
				"rules"
			],
			"indentation": "tab"
		},
		"extends": [
			"stylelint-logical-order"
		]
	}
}
